<Window x:Class="GrafikaKomputerowa2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GrafikaKomputerowa2"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" x:Name="CanvasContainer" Margin="5" VerticalAlignment="Stretch"
                    SizeChanged="CanvasContainer_SizeChanged">
            <Image x:Name="CanvasImage" />
        </StackPanel>
        <StackPanel Grid.Column="1" Margin="5" Background="LightGray">
        </StackPanel>
    </Grid>
</Window>